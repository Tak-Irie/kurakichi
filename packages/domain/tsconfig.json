{
  "extends": "@kurakichi/tsconfig/server.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "removeComments": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    ".turbo",
    "coverage",
    "dist",
    "src/**/*.test.ts",
    "src/**/*.spec.ts"
  ]
}