[
  {
    "name": "express",
    "image": "${express_image}",
    "essential": true,
    "memory": 512,
    "cpu": 256,
    "memoryReservation": 128,
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80,
        "protocol": "tcp"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/kurakichi",
        "awslogs-region": "ap-northeast-1",
        "awslogs-stream-prefix": "express"
      }
    },
    "secrets": [
      {
        "name": "SERVER_PORT",
        "valueFrom": "${secret_manager_arn}"
      },
      {
        "name": "CORS_NEXT",
        "valueFrom": "${secret_manager_arn}"
      },
      {
        "name": "CRYPT_PASS",
        "valueFrom": "${secret_manager_arn}"
      },
      {
        "name": "CRYPT_SALT",
        "valueFrom": "${secret_manager_arn}"
      },
      {
        "name": "GOOGLE_GEO_API_KEY",
        "valueFrom": "${secret_manager_arn}"
      },
      {
        "name": "GOOGLE_OIDC_CLIENT_ID",
        "valueFrom": "${secret_manager_arn}"
      },
      {
        "name": "GOOGLE_OIDC_CLIENT_REDIRECT",
        "valueFrom": "${secret_manager_arn}"
      },
      {
        "name": "GOOGLE_OIDC_CLIENT_SECRET",
        "valueFrom": "${secret_manager_arn}"
      },
      {
        "name": "GOOGLE_OIDC_ISSUER_BASE_URL",
        "valueFrom": "${secret_manager_arn}"
      },
      {
        "name": "PSQL_URL",
        "valueFrom": "${secret_manager_arn}"
      },
      {
        "name": "REDIS_URL",
        "valueFrom": "${secret_manager_arn}"
      },
      {
        "name": "S3_PUBLIC_BUCKET",
        "valueFrom": "${secret_manager_arn}"
      },
      {
        "name": "SENDGRID_API_KEY",
        "valueFrom": "${secret_manager_arn}"
      },
      {
        "name": "SENTRY_DSN",
        "valueFrom": "${secret_manager_arn}"
      },
      {
        "name": "SESSION_SECRET",
        "valueFrom": "${secret_manager_arn}"
      },
      {
        "name": "SSO_REDIRECT_FAIL",
        "valueFrom": "${secret_manager_arn}"
      },
      {
        "name": "SSO_REDIRECT_SUCCESS",
        "valueFrom": "${secret_manager_arn}"
      },
      {
        "name": "YAHOO_OIDC_CLIENT_ID",
        "valueFrom": "${secret_manager_arn}"
      },
      {
        "name": "YAHOO_OIDC_CLIENT_REDIRECT",
        "valueFrom": "${secret_manager_arn}"
      },
      {
        "name": "YAHOO_OIDC_CLIENT_SECRET",
        "valueFrom": "${secret_manager_arn}"
      },
      {
        "name": "YAHOO_OIDC_ISSUER_BASE_URL",
        "valueFrom": "${secret_manager_arn}"
      }
    ]
  },
  {
    "name": "redis",
    "image": "${redis_image}",
    "cpu": 128,
    "memory": 256,
    "portMappings": [
      {
        "containerPort": 6379,
        "hostPort": 6379,
        "protocol": "tcp"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/kurakichi",
        "awslogs-region": "ap-northeast-1",
        "awslogs-stream-prefix": "redis"
      }
    }
  },
  {
    "name": "postgres",
    "image": "${psql_image}",
    "cpu": 128,
    "memory": 256,
    "portMappings": [
      {
        "containerPort": 5432,
        "hostPort": 5432,
        "protocol": "tcp"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/kurakichi",
        "awslogs-region": "ap-northeast-1",
        "awslogs-stream-prefix": "postgres"
      }
    },
    "secrets": [
      {
        "name": "POSTGRES_USER",
        "valueFrom": "${secret_manager_arn}"
      },
      {
        "name": "POSTGRES_DB",
        "valueFrom": "${secret_manager_arn}"
      },
      {
        "name": "POSTGRES_PASSWORD",
        "valueFrom": "${secret_manager_arn}"
      }
    ]
  }
]
