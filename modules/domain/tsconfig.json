  {
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "lib": [
        "es2020"
      ],
      "composite": true,
      "baseUrl": "./",
      "rootDir": "./src",
      "outDir": "./dist",
      "strict": true,
      "sourceMap": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowSyntheticDefaultImports": true,
      "paths": {
        "@kurakichi/prisma": [
          "../prisma/src/index.ts"
        ]
      }
    },
    "include": [
      "src/**/*",
    ],
    "exclude": [
      "dist",
      "node_modules",
      "**/*.spec.ts"
    ],
    "compileOnSave": false,
    "references": [
      {
        "path": "../prisma"
      }
    ]
  }