{
  "extends": "@kurakichi/tsconfig/server.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules",
    ".turbo",
    "coverage",
    "dist",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "**/generated/*.ts"
  ],
}