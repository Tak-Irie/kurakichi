  "private": true,
  "packageManager": "yarn@3.2.0",
  "workspaces": {
    "packages": [
      "apps/*",
      "modules/*"
    ]
  },
  "scripts": {
    "postinstall": "husky install",
    "dev:all": "sh dev.sh",
    "dev:web": "yarn workspace @kurakichi/web dev",
    "dev:server": "yarn workspace @kurakichi/server dev",
    "build:server": "yarn workspace @kurakichi/server build",
    "build:web": "yarn workspace @kurakichi/web build",
    "build:modules": "yarn workspace @kurakichi/domain build & yarn workspace @kurakichi/prisma build & yarn workspace @kurakichi/third-api build",
    "build:third": "yarn workspace @kurakichi/third-api build",
    "gen:gql": "graphql-codegen",
    "gen:prisma:migrate": "yarn workspace @kurakichi/prisma migrate",
    "gen:prisma:migrate-create": "yarn workspace @kurakichi/prisma migrate-create",
    "gen:prisma:generate": "yarn workspace @kurakichi/prisma generate",
    "gen:prisma:seed": "yarn workspace @kurakichi/prisma seed"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/typescript": "^2.4.8",
    "@graphql-codegen/typescript-operations": "^2.3.5",
    "@graphql-codegen/typescript-react-apollo": "^3.2.11",
    "@graphql-codegen/typescript-resolvers": "^2.6.1",
    "@next/eslint-plugin-next": "^12.1.5",
    "@types/apollo-upload-client": "^17.0.0",
    "@types/dompurify": "^2.3.3",
    "@types/graphql-upload": "^8.0.11",
    "@types/imagemin": "^8.0.0",
    "@types/imagemin-webp": "^7.0.0",
    "@types/jest": "^27.4.1",
    "@types/jsdom": "^16.2.14",
    "@types/multer": "^1.4.7",
    "@types/node": "^17.0.24",
    "@types/react": "^18.0.6",
    "@types/uuid": "^8.3.4",
    "@types/validator": "^13.7.2",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-tailwindcss": "^3.5.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.2",
    "prisma": "^3.12.0",
    "safe-regex": "^2.1.1",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "tsc": "^2.0.4",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "date-fns": "^2.28.0",
    "graphql": "^16.3.0"
  }
