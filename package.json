{
  "name": "kurakichi",
  "version": "0.0.1",
  "author": "Takashi Irie <tak.mibp@gmail.com>",
  "license": "Apache License 2.0",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ]
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install",
    "gen:gql": "graphql-codegen",
    "gen:gql:prod": "graphql-codegen --config codegen.prod.yml",
    "gen:prisma:migrate": "yarn workspace @kurakichi/server migrate",
    "gen:prisma:migrate-create": "yarn workspace @kurakichi/server migrate-create",
    "gen:prisma:generate:prod": "yarn workspace @kurakichi/server generate:prod",
    "gen:prisma:generate:dev": "yarn workspace @kurakichi/server generate:dev",
    "gen:prisma:seed": "yarn workspace @kurakichi/server seed",
    "gen:prisma:seed:prod": "yarn workspace @kurakichi/server npx prisma db seed"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/typescript": "^2.4.10",
    "@graphql-codegen/typescript-operations": "^2.3.7",
    "@graphql-codegen/typescript-react-apollo": "^3.2.13",
    "@graphql-codegen/typescript-resolvers": "^2.6.3",
    "@prisma/client": "^3.14.0",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "esbuild": "^0.14.10",
    "esbuild-jest": "^0.5.0",
    "husky": "^7.0.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.4.7",
    "jest-watch-typeahead": "^1.0.0",
    "lint-staged": "^12.1.3",
    "msw": "^0.36.3",
    "prettier": "^2.5.1",
    "prisma": "^3.14.0",
    "turbo": "*"
  },
  "lint-staged": {
    "apps/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "packages/{domain,third-api,prisma}/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@1.22.17"
}
