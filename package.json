{
  "name": "kurakichi",
  "version": "0.0.1",
  "main": "index.js",
  "author": "Takashi Irie <tak.mibp@gmail.com>",
  "license": "Apache License 2.0",
  "private": true,
  "packageManager": "yarn@3.2.0",
  "workspaces": [
    "apps/*",
    "modules",
    "prisma"
  ],
  "scripts": {
    "postinstall": "husky install",
    "dev:web": "yarn workspace @kurakichi/web dev",
    "dev:server": "yarn workspace @kurakichi/server dev",
    "build:server": "yarn workspace @kurakichi/server build",
    "dev:all": "sh dev.sh",
    "gen:gql": "graphql-codegen",
    "gen:prisma:migrate": "yarn workspace @kurakichi/prisma migrate",
    "gen:prisma:migrate-create": "yarn workspace @kurakichi/prisma migrate-create",
    "gen:prisma:generate": "yarn workspace @kurakichi/prisma generate",
    "gen:prisma:seed": "yarn workspace @kurakichi/prisma seed"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.6.1",
    "@graphql-codegen/typescript": "^2.4.3",
    "@graphql-codegen/typescript-operations": "^2.3.5",
    "@graphql-codegen/typescript-react-apollo": "^3.2.11",
    "@graphql-codegen/typescript-resolvers": "^2.5.0",
    "@types/dompurify": "^2.3.3",
    "@types/imagemin": "^8.0.0",
    "@types/imagemin-webp": "^7.0.0",
    "@types/ioredis": "^4.28.7",
    "@types/jest": "^27.4.0",
    "@types/jsdom": "^16.2.14",
    "@types/multer": "^1.4.7",
    "@types/node": "^17.0.13",
    "@types/uuid": "^8.3.4",
    "@types/validator": "^13.7.2",
    "dotenv": "^14.3.2",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "prettier": "^2.5.1",
    "prisma": "^3.12.0",
    "safe-regex": "^2.1.1",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "tsc": "^2.0.4",
    "typescript": "^4.5.5"
  }
}
